<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3ECFF"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/loan_amount_edit_text"
        android:layout_width="357dp"
        android:layout_height="42dp"
        android:layout_marginStart="24dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_marginStart="25dp" />

    <EditText
        android:id="@+id/loan_amount_edit_text2"
        android:layout_width="358dp"
        android:layout_height="43dp"
        android:layout_marginStart="24dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:inputType="number"
        android:text="Любой"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_marginStart="25dp" />

    <EditText
        android:id="@+id/interest_rate_edit_text"
        android:layout_width="169dp"
        android:layout_height="40dp"
        android:layout_marginStart="25dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:layout_marginStart="25dp" />

    <EditText
        android:id="@+id/loan_term_edit_text"
        android:layout_width="171dp"
        android:layout_height="41dp"
        android:layout_marginStart="12dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/interest_rate_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:layout_marginLeft="5dp"
        tools:layout_marginStart="15dp" />

    <Button
        android:id="@+id/calculate_button"
        android:layout_width="354dp"
        android:layout_height="45dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="30dp"
        android:background="#E62121"
        android:text="Рассчитать"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox2"
        tools:layout_marginStart="25dp" />

    <TextView
        android:id="@+id/monthly_payment_text_view"
        android:layout_width="299dp"
        android:layout_height="122dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calculate_button" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="358dp"
        android:layout_height="27dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"
        android:text="Сумма кредита"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_marginStart="25dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="355dp"
        android:layout_height="24dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:text="Вид недвижимости"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loan_amount_edit_text"
        tools:layout_marginStart="25dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="162dp"
        android:layout_height="19dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="32dp"
        android:text="Срок кредита"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loan_amount_edit_text2"
        tools:layout_marginStart="25dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="171dp"
        android:layout_height="23dp"
        android:layout_marginTop="29dp"
        android:text="Ставка"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/loan_amount_edit_text2"
        tools:layout_marginStart="15dp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="167dp"
        android:layout_height="56dp"
        android:layout_marginTop="44dp"
        android:background="#FFFFFF"
        android:text="Аннуитетный"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/checkBox2"
        app:layout_constraintTop_toBottomOf="@+id/loan_term_edit_text"
        tools:layout_marginStart="15dp" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="191dp"
        android:layout_height="54dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="48dp"
        android:background="#0040FF"
        android:text="Дифференцированный"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/interest_rate_edit_text"
        tools:layout_marginLeft="10dp"
        tools:layout_marginStart="30dp" />
</androidx.constraintlayout.widget.ConstraintLayout>